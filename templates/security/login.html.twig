{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    body {
        background: #f0f2f5;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .login-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        width: 100%;
        max-width: 420px;
    }

    .login-card h2 {
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.4rem;
        display: block;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }

    .btn-login {
        background-color: #0d6efd;
        color: #fff;
        border: none;
        border-radius: 0.5rem;
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        display: block;
        margin: 1rem auto 0;
        width: 50%;
        transition: background 0.3s ease;
    }

    .btn-login:hover {
        background-color: #0b5ed7;
    }

    .alert {
        border-radius: 0.5rem;
    }

    .logout-link {
        font-size: 0.9rem;
        color: #dc3545;
        text-decoration: none;
        font-weight: 500;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h2>ðŸ”’ Admin Login</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info mb-4">
                Logged in as <strong>{{ app.user.userIdentifier }}</strong>. <a href="{{ path('app_logout') }}" class="logout-link">Logout</a>
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="username" class="form-label">Email</label>
                <input type="email" name="_username" id="username" value="{{ last_username }}" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-login">Login</button>
        </form>
    </div>
</div>
{% endblock %}